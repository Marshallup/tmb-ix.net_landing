          g(filter='url(#filter0_f)')
            ellipse(cx='292' cy='282' rx='282' ry='272' fill='url(#paint0_linear)')
          defs
            filter#filter0_f(x='-3.05176e-05' y='0' width='584' height='564' filterunits='userSpaceOnUse' color-interpolation-filters='sRGB')
