          .section-coop-content-text__line--medium
      .section-coop-content-form-wrap
        img.section-coop-content-form-circle--blur-pink(src="assets/img/section-coop/ellipse--pink.svg", alt="pink")
        img.section-coop-content-form-circle--blur-gradient(src="assets/img/section-coop/ellipse--gradient.svg", alt="gradient")
        img.section-coop-content-form-circle--blur-arbitrary(src="assets/img/section-coop/ellipse--arbitrary.svg", alt="arbitrary")
